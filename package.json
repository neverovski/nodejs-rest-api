{
  "name": "nodejs-auth-sql",
  "version": "0.1.1",
  "description": "Node.js for Token Based Authentication (access and refresh) with PostgreSQL database.",
  "main": "src/index.ts",
  "scripts": {
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"ts-node -r tsconfig-paths/register ./src/index.ts\" | pino-pretty",
    "start:prod": "node build/index.js | pino-pretty",
    "build": "tsc -p tsconfig.build.json && tscpaths -p tsconfig.build.json -s ./src -o ./build",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "eslint \"src/**/*.ts\" --fix",
    "test:unit": "mocha -r ts-node/register -r tsconfig-paths/register tests/unit/**/*.test.ts",
    "test:integration": "mocha -r ts-node/register -r tsconfig-paths/register tests/integration/**/*.test.ts",
    "coverage:unit": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test:unit",
    "coverage:integration": "nyc -r lcov -e .ts -x \"*.test.ts\" test:integration",
    "migrate:generate": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:create -n",
    "migrate:run": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run",
    "migrate:revert": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert",
    "prepare": "husky install",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neverovski/nodejs-auth-sql.git"
  },
  "author": "Dmitry Neverovski",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/neverovski/nodejs-auth-sql/issues"
  },
  "engines": {
    "node": "^14",
    "npm": "^6"
  },
  "homepage": "https://github.com/neverovski/nodejs-auth-sql#readme",
  "dependencies": {
    "ajv": "^8.6.3",
    "ajv-formats": "^2.1.1",
    "ajv-keywords": "^5.0.0",
    "auto-bind": "^4.0.0",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "bull": "^3.29.3",
    "class-transformer": "^0.4.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "date-fns": "^2.25.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "joi": "^17.4.2",
    "json-schema": "^0.3.0",
    "jsonwebtoken": "^8.5.1",
    "ms": "^2.1.3",
    "nanoid": "^3.1.30",
    "nodemailer": "^6.7.0",
    "pg": "^8.7.1",
    "pino": "^7.0.2",
    "pino-pretty": "^7.1.0",
    "tsyringe": "^4.6.0",
    "typeorm": "^0.2.38"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.1",
    "@types/bull": "^3.15.5",
    "@types/chai": "^4.2.22",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/json-schema": "^7.0.9",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/mocha": "^9.0.0",
    "@types/ms": "^0.7.31",
    "@types/node": "^16.11.1",
    "@types/nodemailer": "^6.4.4",
    "@types/pg": "^8.6.1",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "commitizen": "^4.2.4",
    "commitlint-config-cz": "^0.13.2",
    "cz-conventional-changelog": "3.3.0",
    "cz-customizable": "^6.3.0",
    "eslint": "^8.0.1",
    "eslint-config-airbnb-typescript": "^14.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "prettier": "^2.4.1",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.3.0",
    "tsc-watch": "^4.5.0",
    "tsconfig-paths": "^3.11.0",
    "tscpaths": "0.0.9",
    "typescript": "^4.4.4"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  }
}
